mixin article_excerpt(post)
  article
    h1: a(href=url_for(post.path))= post.title
    time.date(datatime=post.date.toISOString())= post.date.format('YYYY/MM/DD')

    if post.excerpt
      != post.excerpt
      p
        a(href=url_for(post.path)) 続きを読む
    else
      != post.content

    if post.tags
      footer
        ul
          - for({ name, path } of post.tags.data) {
            li: a(href=url_for(path))= name
          - }
